#!/bin/bash
echo "DEVICE=eth0" > /etc/sysconfig/network-scripts/ifcfg-eth0
echo "ONBOOT=yes" >> /etc/sysconfig/network-scripts/ifcfg-eth0
echo "DEVICETYPE=eth0" >> /etc/sysconfig/network-scripts/ifcfg-eth0
echo "BOOTPROTO=none" >> /etc/sysconfig/network-scripts/ifcfg-eth0
echo "IPADDR= {{ eth0-ip }}" >> /etc/sysconfig/network-scripts/ifcfg-eth0
echo "NETMASK={{ eth0-netmask }}" >> /etc/sysconfig/network-scripts/ifcfg-eth0
echo "GATEWAY={{ eth0-gateway }}" >> /etc/sysconfig/network-scripts/ifcfg-eth0
